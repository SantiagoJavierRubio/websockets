<h1>Vista de productos</h1>
{{#if listaDeProductos}}
<table class="table table-dark table-striped mt-4">
    <thead>
        <tr>
            <th scope="col">ID</th>
            <th scope="col">Nombre</th>
            <th scope="col">Precio</th>
            <th scope="col">Foto</th>
        </tr>
    </thead>
    <tbody>
        {{#each listaDeProductos}}
            <tr>
                <th scope="row">{{this.id}}</th>
                <td>{{this.title}}</td>
                <td>${{this.price}}</td>
                <td>
                    <img src="{{this.thumbnail}}" alt="thumbnail" class="img-thumbnail mx-auto d-block">
                </td>
            </tr>
        {{/each}}
    </tbody>
</table>
{{else}}
<div class="alert alert-warning mt-4">
    No hay productos
</div>
{{/if}}
<div class="mt-4">
    <a href="/">Cargar productos</a>
</div>